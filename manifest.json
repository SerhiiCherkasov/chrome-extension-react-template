{
    "manifest_version": 3,
    "name": "React Chrome Extension",
    "version": "1.0.1",
    "description": "A simple React app as a Chrome extension",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "src/sw.ts",
      "type": "module"
    },
    "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.ts"]
    }
  ]
}